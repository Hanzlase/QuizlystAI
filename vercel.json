{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "source": "/css/(.*)",
      "destination": "public/css/$1"
    },
    {
      "source": "/js/(.*)",
      "destination": "public/js/$1"
    },
    {
      "src": "/(.*)",
      "dest": "public/home.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "destination": "public/home.html"
    }
  ]
}
